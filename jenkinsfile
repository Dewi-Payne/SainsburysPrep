pipeline {
    agent any
    stages {
        stage('Build') { 
            steps {
                bat 'mvn -B -DskipTests compile' 
            }
        }
        stage('Test') {
            steps {
                bat 'mvn test'
            }
            post {
                always {
                    junit testResults: '**/test-results/**/*.xml', skipPublishingChecks: true
                }
            }
        }
    }
}
